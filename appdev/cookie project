**************************************
js
**************************************
document.addEventListener("DOMContentLoaded", function () {
    const cookieConsent = document.getElementById("cookie-consent");
    const customizeCookiesButton = document.getElementById("customize-cookies");
    const cookieSettingsPopup = document.getElementById("cookie-settings-popup");
    const overlay = document.querySelector(".overlay");

    // Event listener for accepting all cookies
    const acceptAllCookiesButton = document.getElementById("accept-all-cookies");
    acceptAllCookiesButton.addEventListener("click", function () {
        // Set a cookie to indicate that the user has accepted all cookies
        // You may add additional logic here if needed
        setCookie("accept-all-cookies", "true", 365);
        hideBanner();
    });

    // Event listener for customizing cookies
    customizeCookiesButton.addEventListener("click", function () {
        showPopup();
    });

    // Event listener for saving cookie settings
    const saveCookieSettingsButton = document.getElementById("save-cookie-settings");
    saveCookieSettingsButton.addEventListener("click", function () {
        // Implement code to save the selected cookie preferences
        // You can retrieve settings from checkboxes in the settings popup
        const essentialCookies = document.getElementById("essential-cookies").checked;
        const analyticsCookies = document.getElementById("analytics-cookies").checked;

        // Set cookies based on user preferences
        // Set essential cookies
        setCookie("essential-cookies", essentialCookies.toString(), 365);
        // Set analytics cookies if the user has accepted them
        if (analyticsCookies) {
            setCookie("analytics-cookies", "true", 365);
        } else {
            setCookie("analytics-cookies", "false", 365);
        }

        hidePopup();
    });

    // Event listener for closing the cookie settings popup
    const closeCookieSettingsButton = document.getElementById("close-cookie-settings");
    closeCookieSettingsButton.addEventListener("click", function () {
        hidePopup();
    });

    // Display the cookie consent banner when the user scrolls 20%
    window.addEventListener('scroll', () => {
        if (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight) >= 0.2) {
            showBanner();
        }
    });

    // Check if the user has previously accepted cookies
    const userAcceptsCookies = getCookie("accept-all-cookies");
    if (userAcceptsCookies !== "true") {
        showBanner();
    }

    // Function to set a cookie
    function setCookie(cname, cvalue, exdays) {
        // Your existing setCookie function
    }

    // Function to get a cookie
    function getCookie(cname) {
        // Your existing getCookie function
    }

    // Function to show the banner
    function showBanner() {
        cookieConsent.classList.add("show");
        cookieConsent.classList.remove("hide");
    }

    // Function to hide the banner
    function hideBanner() {
        cookieConsent.classList.remove("show");
        cookieConsent.classList.add("hide");
    }

    // Function to show the popup
    function showPopup() {
        overlay.style.display = "block";
        cookieSettingsPopup.style.display = "block";
    }

    // Function to hide the popup
    function hidePopup() {
        overlay.style.display = "none";
        cookieSettingsPopup.style.display = "none";
    }
});
